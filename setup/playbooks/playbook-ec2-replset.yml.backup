---
- name: create ec2 instances
  hosts: localhost
  connection: local
  gather_facts: false 
  vars:
    region: us-east-1
    key: michael.lynn
    tagsReplSet: '{"owner": "michael.lynn", "project": "Ops Manager Ansible", "expire-on": "2017-05-01", "Name": "mlynn-ansible-repset"}'
    securityGroupsReplSet: '["mlynn-default"]'
    ami: "ami-6869aa05"
    replSetSize: 3
  tasks:
  - name: Replica Set instances
    ec2:
      key_name: "{{ key }}"
      instance_type: t2.small
      image: "{{ ami }}"
      wait: yes
      group: "{{ securityGroupsReplSet }}"
      count: "{{ replSetSize }}"
      region: "{{ region }}"
      instance_tags: "{{ tagsReplSet }}"
    register: replicaset
  - ec2_vol:
      region: us-east-1
      instance: "{{ item.id }}"
      volume_size: 12
      name: my_existing_volume_Name_tag
      device_name: /dev/xvdb
    with_items: "{{ replicaset.instances }}"
    register: ec2_vol
