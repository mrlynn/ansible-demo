---
- hosts: opsManager
  remote_user: ec2-user
  become: yes
  vars:
    opsmanagerGPG: mongodb-mms-2.0.6.363-1.x86_64.rpm.gpg
    opsmanager: mongodb-mms-2.0.6.363-1.x86_64.rpm
  tasks:
  - get_url: url=https://s3.eu-central-1.amazonaws.com/torstenspindler/{{opsmanagerGPG}} dest=/home/ec2-user/{{opsmanagerGPG}}
  - shell: echo 1234 | gpg --batch --passphrase-fd 0 {{opsmanagerGPG}}
  - yum: name=/home/ec2-user/{{opsmanager}} state=present
  - service: name=mongodb-mms state=started
